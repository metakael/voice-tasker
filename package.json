{
  "name": "voice-tasker",
  "version": "0.1.0",
  "private": true,
  "description": "Telegram bot that converts voice notes into Google Tasks using OpenAI Whisper + GPT-5 Mini on Vercel.",
  "type": "module",
  "main": "api/telegram.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vercel dev --yes",
    "get-google-token": "node scripts/get-google-token.js",
    "get-tasklist-ids": "node scripts/get-tasklist-ids.js",
    "vercel-build": "echo 'no build'"
  },
  "dependencies": {
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "vercel": "^33"
  },
  "vercel": {
    "crons": [
      {
        "path": "/api/daily-summary",
        "schedule": "0 1 * * 1-5"
      }
    ]
  }
}
